    "url": "git+https://github.com/TU_USUARIO/ferreteria-kiam.git"
  },
  "bugs": {
    "url": "https://github.com/TU_USUARIO/ferreteria-kiam/issues",
    "email": "kiamferreteria@gmail.com"
  },
  "homepage": "https://github.com/TU_USUARIO/ferreteria-kiam#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "workspaces": [
    "ferreteria-backend",
    "ferreteria-web"
  ],
  "private": false,
  "directories": {
    "doc": "docs",
    "example": "database"
  },
